<% provide(:title, "Compare") %>
<h1>Compare</h1>
<p>
    This page will compare the PvP stats of two destiny accounts/characters
</p>
<div class="compare-container">
    <!-- Headers -->
    <div class="player-header-container">
        <!-- Player 1 header -->
        <div class="player-card-header">
            Player 1 Header ID: <%= @user1.user_id %>
        </div>
        <!-- Comparison column header -->
        <div class="compare-column-header">
            Comparison Column <!-- What a name! -->
        </div>
        <!-- Player 2 header -->
        <div class="player-card-header">
            Player 2 Header ID: <%= @user2.user_id %>
        </div>
    </div>

    <!-- Stat cards -->
    <div class="stat-card-container">
        <!-- Multiple stat card rows -->

        <!-- Primary Weapon row -->
        <hr>
        <div class="stat-card-row">
            <!-- Player 1 stat card -->
            <div class="stat-card">
                <div class="stat-card-header">Primary Weapon Kills</div>
                <div class="stat-card-stat">Scout Rifle : <%= @user1.scout %></div>
                <div class="stat-card-stat">Pulse Rifle : <%= @user1.pulse %></div>
                <div class="stat-card-stat">Hand Cannon : <%= @user1.hand %></div>
                <div class="stat-card-stat">Auto Rifle  : <%= @user1.auto %></div>
            </div>
            <!-- Comparison column -->
            <div class="stat-compare-column">
                <br/>
                <div class='compare-stat'><%= @user1.scout %> - <%= @user2.scout %></div>
                <div class='compare-stat'><%= @user1.pulse %> - <%= @user2.pulse %></div>
                <div class='compare-stat'><%= @user1.hand %> - <%= @user2.hand %></div>
                <div class='compare-stat'><%= @user1.auto %> - <%= @user2.auto %></div>
            </div>
            <!-- Player 2 stat card -->
            <div class="stat-card">
                <div class="stat-card-header">Primary Weapon Kills</div>
                <div class="stat-card-stat">Scout Rifle : <%= @user2.scout %></div>
                <div class="stat-card-stat">Pulse Rifle : <%= @user2.pulse %></div>
                <div class="stat-card-stat">Hand Cannon : <%= @user2.hand %></div>
                <div class="stat-card-stat">Auto Rifle  : <%= @user2.auto %></div>
            </div>
        </div>

        <!-- Secondary Weapon row -->
        <hr>
        <div class="stat-card-row">
            <!-- Player 1 stat card -->
            <div class="stat-card">
                <div class="stat-card-header">Secondary Weapon Kills</div>
                <div class="stat-card-stat">Sniper Rifle : 130</div>
                <div class="stat-card-stat">Fusion Rifle : 120</div>
                <div class="stat-card-stat">Shotgun :      110</div>
                <div class="stat-card-stat">Side Arm :     100</div>
            </div>
            <!-- Comparison column -->
            <div class="stat-compare-column">
                <br/>
                <div class='compare-stat'>130 - 30</div>
                <div class='compare-stat'>120 - 20</div>
                <div class='compare-stat'>110 - 10</div>
                <div class='compare-stat'>100 - 0</div>
            </div>
            <!-- Player 2 stat card -->
            <div class="stat-card">
                <div class="stat-card-header">Secondary Weapon Kills</div>
                <div class="stat-card-stat">Sniper Rifle : 30</div>
                <div class="stat-card-stat">Fusion Rifle : 20</div>
                <div class="stat-card-stat">Shotgun :      10</div>
                <div class="stat-card-stat">Side Arm :     0</div>
            </div>
        </div>

    </div>
</div>
